# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files for consistent LF line endings
*.rs text eol=lf
*.toml text eol=lf
*.sql text eol=lf
*.md text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Force binary files to remain unchanged
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary

# Ensure shell scripts have correct line endings
*.sh text eol=lf

# Windows batch files should have CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
